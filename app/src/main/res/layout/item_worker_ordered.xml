<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:background="@drawable/corner_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:id="@+id/tv_ordre_name"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机维修/苹果"/>

        <TextView
            android:id="@+id/tv_order_state"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:padding="5dp"
            android:textColor="#E82B2D"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="待接单"/>

        <include layout="@layout/view_line_h"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号"
            android:textSize="13sp"
            android:textColor="#999999" />
        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#333333" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务时间"
            android:textSize="13sp"
            android:textColor="#999999" />
        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#333333" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户地址"
            android:textSize="13sp"
            android:textColor="#999999" />
        <TextView
            android:id="@+id/tv_order_address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#333333" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修内容"
            android:textSize="13sp"
            android:textColor="#999999" />
        <TextView
            android:id="@+id/tv_order_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#333333" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算价："
            android:textSize="12sp"
            android:textColor="#999999" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_money"
            android:textSize="12sp"
            android:textColor="#E82B2D" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#E82B2D" />
        <TextView
            android:id="@+id/tv_rest_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="#E82B2D" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_divider" />
    <LinearLayout
        android:id="@+id/lly_operate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/tv_operate0"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="改约"
            android:background="@drawable/order_border_gray"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#999999" />
        <TextView
            android:id="@+id/tv_operate1"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="异常反馈"
            android:background="@drawable/order_border_gray"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#999999" />
        <TextView
            android:id="@+id/tv_operate2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="我要接单"
            android:background="@drawable/order_border_red"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#E82B2D" />

    </LinearLayout>

</LinearLayout>