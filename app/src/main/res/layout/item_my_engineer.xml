<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/avatar"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#333333"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginLeft="12dp"
        android:text="叶浩然"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textColor="#333333"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="29dp"
        android:text="135666666"/>
    <FrameLayout
        android:id="@+id/fly_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.hedgehog.ratingbar.RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            hedgehog:halfstart="true"
            android:gravity="center"
            hedgehog:starCount="5"
            hedgehog:starEmpty="@drawable/icon_service_star"
            hedgehog:starFill="@drawable/icon_service_star"
            hedgehog:starImagePadding="1dp"
            hedgehog:starImageHeight="18dp"
            hedgehog:starImageWidth="18dp"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/icon_my_engineer_delete"/>
    </FrameLayout>

</LinearLayout>

